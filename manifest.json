{
  "manifest_version": 3,
  "name": "Knight Online Stream Blocker for Kick",
  "version": "1.0",
  "description": "Kick.tv'de Knight Online kategorisindeki yayınları otomatik gizler",
  "author": "omeryavuz.dev@gmail.com",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://kick.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://kick.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}